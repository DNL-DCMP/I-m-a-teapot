generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  name        String
  email       String     @unique
  password    String
  createdAt   DateTime   @default(now())
  recipes     Recipe[]  
  comments    Comment[] 
}

model Recipe {
  id            Int        @id @default(autoincrement())
  name         String
  description   String?
  ingredients   String   
  instructions  String
  userId        Int
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments      Comment[]  
}

model Comment {
  id           Int        @id @default(autoincrement())
  content      String
  createdAt    DateTime   @default(now())
  userId       Int
  recipeId     Int
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe       Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
}